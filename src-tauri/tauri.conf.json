{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "BetSure Dialer",
  "version": "1.0.2",
  "identifier": "com.betsure.dialer",
  "plugins": {
    "updater": {
      "pubkey": "",
      "endpoints": [
        "https://github.com/Visionatedigital/bet-wise-dialer/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8083",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "BetSure Dialer",
        "label": "main",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "visible": true,
        "focus": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://*.supabase.co wss://*.supabase.co http://localhost:* http://127.0.0.1:* http://*:* https://api.openai.com https://voice.africastalking.com https://*.africastalking.com wss://*.africastalking.com; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://webrtc.africastalking.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https:; media-src 'self' blob: https:; font-src 'self' data:; frame-src 'self' https:"
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "title": "BetSure"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Business",
    "shortDescription": "BetSure Call Center Dialer",
    "longDescription": "A professional call center application for BetSure agents to manage leads, make calls, and track customer interactions.",
    "copyright": "Â© 2025 BetSure. All rights reserved.",
    "publisher": "BetSure",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": null,
      "nsis": {
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "startMenuFolder": "BetSure",
        "compression": "lzma"
      }
    }
  }
}
